@{
    ViewData["Title"] = "Create User";
}

<h1>Create User</h1>

<div class="container">
    <div class="row justify-content-center col-md-6">
        <div class="card">
            <div class="header">
                <h3 class="text-center">Create New User</h3>
            </div>
            <br/>
            <div class="body">
               <form method="post" action="/Create/Create">
                    <label>User Name: </label>
                    <input class="form-control" type="text" required name="UserName"/>
                    </br>
                    <label>Email: </label>
                    <input class="form-control" type="email" required name="Email"/>
                    </br>
                    <button class="btn btn-outline-primary type="submit">Save</button>
                    <a class="btn btn-outline-primary my-3" href="/Create/UserManagement">Back</a>
               </form>
            </div>

        </div>
    </div>
</div>