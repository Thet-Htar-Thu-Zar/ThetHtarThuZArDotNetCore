﻿@{
    // Layout = "";
    ViewData["Title"] = "Edit User";
    var error = TempData["error"];
}

<h1>Edit User</h1>

<div class="container">
    <div class="row justify-content-center col-md-6">
        <div class="card">
            <div class="header">
                <h3 class="text-center">Edit User</h3>
            </div>
            <br />
            <div class="card-body">
                @if (Model.Count > 0)
                {
                    <form method="post" action="/Create/Update">

                        <input type="hidden" value="@Model[0].UserId" name="UserId" />
                        <label>User Name: </label>
                        <input class="form-control" type="text" required name="UserName" value="@Model[0].UserName" />
                        <br />
                        <label>Email: </label>
                        <input class="form-control" name="Email" required type="email" value="@Model[0].Email" />
                        <br />
                        <button class="btn btn-outline-info" type="submit">Update</button>
                    </form>
                }
                else
                {
                    <h3>No data found.</h3>
                }
            </div>

        </div>
    </div>
</div>
